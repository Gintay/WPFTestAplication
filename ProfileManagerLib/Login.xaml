<Window x:Class="ProfileManagerLib.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="100.667" Width="300" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="272" ToolTip="Login"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="272" ToolTip="Password" Height="23" Password="Password"/>
        <Button x:Name="bCancel" Content="Cancel" HorizontalAlignment="Left" Margin="207,66,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" ToolTip="Cancel"/>
        <Button x:Name="bLogin" Content="Login" HorizontalAlignment="Left" Margin="127,66,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" ToolTip="Login" Click="bLogin_Click"/>

    </Grid>
</Window>
